%h1 New player_item

= form_for @player_item do |f|
  - if @player_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player_item.errors.count, "error")} prohibited this player_item from being saved:"
      %ul
        - @player_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label "monster level (item tier)"
    = f.text_field 'monster_level'
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Generate'


= link_to 'Back', player_items_path
