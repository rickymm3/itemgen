= form_for @magic_item_name do |f|
  - if @magic_item_name.errors.any?
    #error_explanation
      %h2= "#{pluralize(@magic_item_name.errors.count, "error")} prohibited this magic_item_name from being saved:"
      %ul
        - @magic_item_name.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :affix
    = f.check_box :affix
  .actions
    = f.submit 'Save'
