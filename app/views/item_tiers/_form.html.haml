= form_for @item_tier do |f|
  - if @item_tier.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_tier.errors.count, "error")} prohibited this item_tier from being saved:"
      %ul
        - @item_tier.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :multiplier
    = f.text_field :multiplier
  .actions
    = f.submit 'Save'
