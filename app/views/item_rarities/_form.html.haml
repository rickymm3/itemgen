= form_for @item_rarity do |f|
  - if @item_rarity.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_rarity.errors.count, "error")} prohibited this item_rarity from being saved:"
      %ul
        - @item_rarity.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
